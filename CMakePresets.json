{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 22,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "core",
            "hidden": true,
            "binaryDir": "build/${presetName}"
        },
        {
            "name": "native",
            "hidden": true,
            "cacheVariables": {
                "TARGET_PLATFORM_NATIVE": "ON"
            }
        },
        {
            "name": "windows",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "TARGET_PLATFORM_WINDOWS": "ON",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "inherits": [
                "native"
            ]
        },
        {
            "name": "linux",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "TARGET_PLATFORM_LINUX": "ON",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "inherits": [
                "native"
            ]
        },
        {
            "name": "web",
            "hidden": true,
            "generator": "Ninja",
            "toolchainFile": "pandora/ext/emsdk/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
            "cacheVariables": {
                "TARGET_PLATFORM_WEB": "ON"
            }
        },
        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "debug-windows",
            "displayName": "Debug (Windows)",
            "inherits": [
                "core",
                "debug",
                "windows"
            ]
        },
        {
            "name": "debug-linux",
            "displayName": "Debug (Linux)",
            "inherits": [
                "core",
                "debug",
                "linux"
            ]
        },
        {
            "name": "debug-web",
            "displayName": "Debug (Web)",
            "inherits": [
                "core",
                "debug",
                "web"
            ]
        },
        {
            "name": "release-windows",
            "displayName": "Release (Windows)",
            "inherits": [
                "core",
                "release",
                "windows"
            ]
        },
        {
            "name": "release-linux",
            "displayName": "Release (Linux)",
            "inherits": [
                "core",
                "release",
                "linux"
            ]
        },
        {
            "name": "release-web",
            "displayName": "Release (Web)",
            "inherits": [
                "core",
                "release",
                "web"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "core",
            "configurePreset": "core",
            "hidden": true
        },
        {
            "name": "debug-windows",
            "description": "Build Knight-One in Debug",
            "displayName": "Debug (Windows)",
            "configurePreset": "debug-windows",
            "inherits": [
                "core"
            ],
            "targets": [
                "setup_compile_commands",
                "game"
            ]
        },
        {
            "name": "debug-linux",
            "description": "Build Knight-One in Debug",
            "displayName": "Debug (Linux)",
            "configurePreset": "debug-linux",
            "inherits": [
                "core"
            ],
            "targets": [
                "setup_compile_commands",
                "game"
            ]
        },
        {
            "name": "debug-web",
            "description": "Build Knight-One in Debug",
            "displayName": "Debug (Web)",
            "configurePreset": "debug-web",
            "inherits": [
                "core"
            ],
            "targets": [
                "setup_compile_commands",
                "game"
            ]
        },
        {
            "name": "release-windows",
            "description": "Build Knight-One in Release",
            "displayName": "Release (Windows)",
            "configurePreset": "release-windows",
            "inherits": [
                "core"
            ],
            "targets": [
                "setup_compile_commands",
                "game"
            ]
        },
        {
            "name": "release-linux",
            "description": "Build Knight-One in Release",
            "displayName": "Release (Linux)",
            "configurePreset": "release-linux",
            "inherits": [
                "core"
            ],
            "targets": [
                "setup_compile_commands",
                "game"
            ]
        },
        {
            "name": "release-web",
            "description": "Build Knight-One in Release",
            "displayName": "Release (Web)",
            "configurePreset": "release-web",
            "inherits": [
                "core"
            ],
            "targets": [
                "setup_compile_commands",
                "game"
            ]
        }
    ]
}
